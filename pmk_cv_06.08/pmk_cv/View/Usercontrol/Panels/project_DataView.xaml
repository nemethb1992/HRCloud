            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <CheckBox x:Name="check_1" Grid.Column="0" Grid.Row="0" Margin="8,0" Background="White" Content="Céges Honlap" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_2" Grid.Column="1" Grid.Row="0" Margin="8,0" Background="White" Content="Facebook" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_3" Grid.Column="0" Grid.Row="1" Margin="8,0" Background="White" Content="Profession" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_4" Grid.Column="1" Grid.Row="1" Margin="8,0" Background="White" Content="allasstart.hu" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_5" Grid.Column="0" Grid.Row="2" Margin="8,0" Background="White" Content="keol.hu" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_6" Grid.Column="1" Grid.Row="2" Margin="8,0" Background="White" Content="hiros.hu" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_7" Grid.Column="0" Grid.Row="3" Margin="8,0" Background="White" Content="Kecskeméti Lapok" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_8" Grid.Column="1" Grid.Row="3" Margin="8,0" Background="White" Content="Egyéb" Style="{StaticResource login_check}" VerticalAlignment="Center"/>
                <Border Background="{StaticResource Listbox_light}" Grid.ColumnSpan="2" Grid.RowSpan="4" Panel.ZIndex="-1" CornerRadius="5"/>

            </Grid>
            <CheckBox x:Name="publikalt_check" Grid.Column="1" Grid.Row="1" Content="Publikálva" Style="{StaticResource login_check}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Checked="publikalt_check_Checked" Unchecked="publikalt_check_Unchecked"/>
            <TextBlock x:Name="hirdetes_text_1" Grid.Row="1" VerticalAlignment="Center" Style="{StaticResource Standard_Textblock}" Text="Feladatok:" />
            <TextBox x:Name="feladatok_tbx" Tag="feladatok" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"  TextWrapping="Wrap"  Style="{StaticResource BigText_style}" LostFocus="Projekt_Leiras_LostFocus">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource listCorner}"/>
                </TextBox.Resources>
            </TextBox>
            <TextBlock x:Name="hirdetes_text_2" Grid.Row="3" VerticalAlignment="Center"  Style="{StaticResource Standard_Textblock}" Text="Elvárások:" />
            <TextBox x:Name="elvarasok_tbx" Tag="elvarasok" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4"  TextWrapping="Wrap"  Style="{StaticResource BigText_style}" LostFocus="Projekt_Leiras_LostFocus">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource listCorner}"/>
                </TextBox.Resources>
            </TextBox>
            <TextBlock x:Name="hirdetes_text_3"  Grid.Row="5" VerticalAlignment="Center"  Style="{StaticResource Standard_Textblock}" Text="Amit kínálunk" />
            <TextBox x:Name="kinalunk_tbx" Tag="kinalunk" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6"  TextWrapping="Wrap"  Style="{StaticResource BigText_style}" LostFocus="Projekt_Leiras_LostFocus">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource listCorner}"/>
                </TextBox.Resources>
            </TextBox>
            <TextBlock x:Name="hirdetes_text_4"  Grid.Row="7" VerticalAlignment="Center"  Style="{StaticResource Standard_Textblock}" Text="Előnyök" />
            <TextBox x:Name="elonyok_tbx" Tag="elonyok" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8"  TextWrapping="Wrap"  Style="{StaticResource BigText_style}" LostFocus="Projekt_Leiras_LostFocus">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource listCorner}"/>
                </TextBox.Resources>
            </TextBox>
        </Grid>

        <Grid x:Name="Dokumentumok_Grid" Grid.Column="3"  Grid.Row="5"   Margin="0,0,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="csatolmanyok_label" Grid.Column="0" Grid.Row="0"  Style="{StaticResource Standard_Textblock}" Text="Csatolmányok" />

            <ListBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" x:Name="csatolmany_listBox" AllowDrop="True" Style="{StaticResource small_listBox_style}"   HorizontalContentAlignment="Stretch" SelectionMode="Extended" >
                <ListBox.Resources>
                    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource listCorner}"/>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource listBoxItem_style}"/>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2" Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0" Height="20" Width="30" Source="{Binding kep}"/>
                            <TextBlock Grid.Column="1" Style="{StaticResource Standard_Textblock}" Text="{Binding fajlnev}"/>
                            <Button x:Name="csatolmany_download" Grid.Column="2" Style="{StaticResource StandardButton}" Margin="4,2" Content="Megnyitás" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="projekt_open_btn" Grid.Row="5" Grid.RowSpan="3" Style="{StaticResource StandardButton}" Content="Új"/>
        </Grid>
        <Grid x:Name="Koltsegek_Grid" Grid.Column="3"  Grid.Row="4" Grid.RowSpan="1" Margin="0,0,0,30" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="koltsegek_label" Grid.Column="0" Grid.Row="0" Style="{StaticResource Standard_Textblock}" Text="Költségek" />
            <TextBlock x:Name="ossz_koltseg" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Style="{StaticResource Standard_Textblock}" Text="0 ft" />
            <Image Grid.Column="2" Height="24" Margin="5,0,0,0"  Source="/HRCloud;component/Public/imgs/coins.png"/>

            <ListBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" x:Name="koltseg_listBox" Style="{StaticResource small_listBox_style}"   HorizontalContentAlignment="Stretch" SelectionMode="Extended" >
                <ListBox.Resources>
                    <Style TargetType="{x:Type Border}" BasedOn="{StaticResource listCorner_square}"/>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource listBoxItem_style}"/>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Törlés" Click="Koltseg_Delete"/>
                                </ContextMenu>
                            </Grid.ContextMenu>
                            <Image Grid.Column="0" Height="24" Margin="5,0,0,0" Source="/HRCloud;component/Public/imgs/coin.png"/>
                            <TextBlock Grid.Column="1" Margin="8,5" Style="{StaticResource panelTbl_style}" Text="{Binding koltseg_megnevezes}"/>
                            <TextBlock Grid.Column="2" Margin="10,5" TextAlignment="Right" Style="{StaticResource panelTbl_style}" Text="{Binding osszeg}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="koltseg_open_btn" Grid.Column="0" Grid.Row="4" Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource StandardButton}"  Content="Új" Click="koltseg_open_btn_Click" />
            <Grid x:Name="Koltseg_insert_grid" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Visibility="Hidden" Background="White" Margin="15" Style="{StaticResource gridShadow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource big_title_style}" FontSize="22" VerticalAlignment="Center" Text="Új költség felvétele"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource Standard_Textblock}" VerticalAlignment="Center" Text="Megnevezés:"/>
                <TextBox x:Name="k_megnevezes_tbx" Grid.Column="1" Grid.Row="2" Margin="0,9" Style="{StaticResource Standard_Textbox}" />
                <TextBlock Grid.Column="1" Grid.Row="3"  Style="{StaticResource Standard_Textblock}" VerticalAlignment="Center" Text="Összeg:"/>
                <TextBox x:Name="k_osszeg_tbx"  Grid.Column="1" Grid.Row="4" Margin="0,9" Style="{StaticResource Standard_Textbox}" PreviewTextInput="numericTextBox"/>
                <Button Grid.Column="1" Grid.Row="5" Style="{StaticResource StandardButton}" Width="150" Height="40" Content="Mentés" HorizontalAlignment="Right" Click="Koltseg_mentes" />
                <Button Grid.Column="1" Grid.Row="5" Style="{StaticResource StandardButton}" Width="150" Height="40" Content="Mégsem" HorizontalAlignment="Left" Click="Koltse_megsem"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
